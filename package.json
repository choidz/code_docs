{
  "name": "my-code-docs",
  "version": "0.1.0",
  "description": "AI-based source code analysis and documentation tool.",
  "author": "Your Name",
  "private": true,
  "main": "build/main.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^2.0.0",
    "glob": "9.3.5",
    "jszip": "^3.10.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@types/jest": "^27.5.2",
    "@types/jszip": "^3.4.0",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/react-syntax-highlighter": "^15.5.13",
    "concurrently": "^8.2.2",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "postbuild": "if not exist build\\main.js copy public\\main.js build\\main.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron public/main.js\"",
    "electron:build": "npm run build && npm run postbuild && electron-builder"
  },
  "optionalDependencies": {
    "fsevents": "*"
  },
  "build": {
    "appId": "com.my-code-docs.app",
    "productName": "소스추출기",
    "asar": true,
    "files": [
      "build/**/*",
      "public/preload.js"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "extraMetadata": {
      "main": "build/main.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}