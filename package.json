{
  "name": "my-code-docs",
  "version": "0.1.0",
  "description": "AI-based source code analysis and documentation tool.",
  "author": "Your Name",
  "private": true,
  "main": "build/electron/main.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^2.0.0",
    "glob": "^10.4.2",
    "jszip": "^3.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.6.1",
    "reactflow": "^11.11.4",
    "recharts": "^3.1.2",
    "web-vitals": "^2.1.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.3",
    "@babel/traverse": "^7.28.3",
    "@playwright/test": "^1.45.3",
    "@types/d3-dispatch": "^3.0.0",
    "@types/jest": "^27.5.2",
    "@types/jszip": "^3.4.0",
    "@types/node": "^20.14.12",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.2.4",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^2.0.4",
    "concurrently": "^8.2.2",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "jsdom": "^24.1.1",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "vitest": "^2.0.4",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build:react": "react-scripts build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "clean": "rimraf build",
    "build": "npm run clean && npm run build:react && npm run build:electron",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "eject": "react-scripts eject",
    "electron:start": "concurrently \"npm start\" \"wait-on http://localhost:3000 && nodemon\"",
    "electron:build": "npm run build && electron-builder"
  },
  "optionalDependencies": {
    "fsevents": "*"
  },
  "build": {
    "appId": "com.my-code-docs.app",
    "productName": "소스추출기",
    "asar": true,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "extraMetadata": {
      "main": "build/electron/main.js"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}